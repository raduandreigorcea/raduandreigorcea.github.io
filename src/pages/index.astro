---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import ProjectCard from "../components/ProjectCard.astro";
import { Image } from "astro:assets";

import ProfileImage from "../assets/profile.jpg";

import { site, projects } from "../../config";
---

<Layout>
	<section class="hero">
		<Image
			src={ProfileImage}
			alt="Profile picture"
			width={240}
			height={240}
			class="profile-pic"
		/>

		<div class="hero-text">
			<h1>{site.name}</h1>
			<span class="label">{site.label}</span>
			<p class="bio">{site.desc}</p>
		</div>

		<div class="social" id="contact">
			<Button
				href="https://github.com/raduandreigorcea"
				icon="github"
				target="_blank"
				className="social-link"
				aria-label="GitHub profile">/raduandreigorcea</Button
			>
			<Button
				href="https://www.linkedin.com/in/radu-andrei-gorcea/"
				icon="linkedin"
				target="_blank"
				className="social-link"
				aria-label="LinkedIn profile">/raduandreigorcea</Button
			>
			<Button
				href="mailto:radu.andrei787@gmail.com"
				icon="mail"
				className="social-link"
				aria-label="Send email">radu.andrei787@gmail.com</Button
			>
			<Button
				href="tel:+40757967797"
				icon="phone"
				className="social-link"
				aria-label="Call phone number">+40 757 967 797</Button
			>
		</div>
	</section>

	<section class="projects" id="projects">
		<div class="projects-grid">
			{projects.map((project) => <ProjectCard {...project} />)}
		</div>
	</section>
</Layout>

<style>
	.hero {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
		gap: var(--space-lg);
	}

	.profile-pic {
		border-radius: 50%;
		height: clamp(100px, 40vw, 240px);
		width: clamp(100px, 40vw, 240px);
		object-fit: contain;
		border: 3px solid var(--color-border-hover);
		background-color: var(--color-primary);
		box-shadow: var(--shadow-lg), var(--shadow-glow);
	}

	.hero-text {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: var(--space-sm);
	}

	h1 {
		color: var(--color-primary);
		font-size: clamp(var(--font-size-2xl), 5vw, var(--font-size-3xl));
		font-weight: var(--font-weight-bold);
		letter-spacing: var(--letter-spacing-tight);
		line-height: var(--line-height-tight);
		margin: 0;
		word-break: break-word;
	}

	.label {
		color: var(--color-secondary);
		font-size: var(--font-size-lg);
		font-weight: var(--font-weight-medium);
	}

	.bio {
		max-width: min(520px, 100%);
		color: var(--color-text);
		line-height: var(--line-height-relaxed);
		margin: var(--space-sm) 0 0;
		padding-inline: var(--space-sm);
	}

	.social {
		display: flex;
		gap: var(--space-md);
		flex-wrap: wrap;
		justify-content: center;
	}

	.social-link {
		padding: var(--space-sm);
		border: 1px solid var(--color-border);
		border-radius: var(--border-radius);
		color: #var(--color-text);
		background: var(--color-background);
		transition: var(--transition);
	}

	.social-link:hover {
		color: var(--color-secondary);
		border-color: var(--color-border-hover);
		background-color: var(--color-surface-hover);
		box-shadow: var(--shadow-sm);
	}

	.projects {
		padding-block: var(--space-2xl);
	}

	h2 {
		color: var(--color-primary);
		font-size: clamp(var(--font-size-xl), 4vw, var(--font-size-2xl));
		font-weight: var(--font-weight-semibold);
		letter-spacing: var(--letter-spacing-tight);
		margin: 0 0 var(--space-xs);
	}

	.projects-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: var(--space-md);
	}

	@media (min-width: 700px) {
		.projects-grid {
			grid-template-columns: 1fr 1fr;
		}
	}

	#contact,
	#projects {
		scroll-margin-top: 80px;
	}

	@media (max-width: 768px) {
		.hero {
			padding-block: var(--space-2xl) var(--space-xl);
		}

		.projects {
			padding-block: var(--space-xl);
		}
	}

	@media (max-width: 480px) {
		.hero {
			padding-block: var(--space-xl) var(--space-lg);
			gap: var(--space-md);
		}

		.profile-pic {
			min-width: 120px;
			min-height: 120px;
		}

		.label {
			font-size: var(--font-size-base);
		}

		.bio {
			font-size: var(--font-size-sm);
		}

		.section-header {
			margin-bottom: var(--space-lg);
		}

		.social {
			gap: var(--space-xs);
		}
	}
</style>
